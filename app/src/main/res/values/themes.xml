<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PokemonGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/green_m300</item>

        <item name="android:statusBarColor">@color/green_m300</item>
        <item name="android:windowActivityTransitions">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.PokemonGame" parent="Base.Theme.PokemonGame" />

    <style name="TextTitle" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/plusjakartasansbold</item>
    </style>

    <style name="PokemonTitle" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/plusjakartasanssemibold</item>
    </style>

    <style name="Subtitle" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/plusjakartasanssemibold</item>
    </style>

    <style name="PokemonSectionTitle" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/plusjakartasansbold</item>
    </style>

    <style name="AbilityTitle" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/plusjakartasansmedium</item>
    </style>

    <style name="AbilityDesc" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/plusjakartasansmedium</item>
    </style>

    <style name="TextNormal" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/plusjakartasansregular</item>
    </style>

    <style name="VsCompare" parent="Theme.PokemonGame">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/plusjakartasansextrabold</item>
    </style>
</resources>